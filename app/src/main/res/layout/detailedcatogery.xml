<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/details"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="10dp"
        android:id="@+id/cardViewCatogery"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/Catogeryimage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="left"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/profilebackground" />

            <TextView
                android:id="@+id/CatogeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Resturant"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@+id/Catogeryimage"
                app:layout_constraintStart_toStartOf="@+id/Catogeryimage"
                app:layout_constraintTop_toBottomOf="@+id/Catogeryimage" />

            <TextView
                android:id="@+id/CatogeryItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="33dp"
                android:layout_marginTop="5dp"
                android:text="PAKWAN RESTURANT"
                android:textColor="#151515"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/Catogeryimage"
                app:layout_constraintTop_toTopOf="@+id/Catogeryimage" />

            <TextView
                android:id="@+id/Rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Ratings  -"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/CatogeryItem"
                app:layout_constraintTop_toBottomOf="@+id/CatogeryItem" />

            <TextView
                android:id="@+id/ItemAddress"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif"
                android:text="NearBy Balram-Nagar,On the way of Old Gunupur"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/Rate"
                app:layout_constraintTop_toBottomOf="@+id/Rate" />

            <TextView
                android:id="@+id/Ratings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="4.5"
                app:layout_constraintBottom_toBottomOf="@+id/Rate"
                app:layout_constraintStart_toEndOf="@+id/Rate"
                app:layout_constraintTop_toTopOf="@+id/Rate" />

            <ImageView
                android:id="@+id/Ratingimage"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="20dp"
                app:layout_constraintBottom_toBottomOf="@+id/Ratings"
                app:layout_constraintStart_toEndOf="@+id/Ratings"
                app:layout_constraintTop_toTopOf="@+id/Ratings"
                app:srcCompat="@android:drawable/btn_star_big_on" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>